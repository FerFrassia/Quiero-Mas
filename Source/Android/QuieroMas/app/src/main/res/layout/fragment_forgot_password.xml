<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:validator="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    tools:context="com.android.quieromas.fragment.SignupFragment">


    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#f5f5f4"
        android:alpha="0.8"
        >
    </ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/signup_container">


        <TextView
            android:text="TU EMAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle_text_size"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColorBlack"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:id="@+id/textView5" />

        <com.andreabaccega.widget.FormEditText
            validator:testType="email"
            validator:emptyErrorString="@string/cannot_be_empty"
            validator:testErrorString="@string/default_test_error_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="ej: vani@gmail.com"
            android:id="@+id/etxt_forgot_email" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@drawable/input_line"/>


        <TextView
            android:text="Ingresá el email con el que creaste tu cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/small_text_size"
            android:background="@android:color/transparent"
            android:textColor="@color/textColorBlack"
            android:layout_gravity="left"
            android:id="@+id/txt_info_forgot" />

        <Button
            android:text="Enviar contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/subtitle_text_size"
            android:background="@drawable/button_border_black"
            android:textColor="@color/textColorBlack"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:id="@+id/btn_send_forgot_password" />

    </LinearLayout>
</FrameLayout>
