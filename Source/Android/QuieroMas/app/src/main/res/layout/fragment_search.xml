<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.quieromas.fragment.ShoppingListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/orangePrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscá la receta que más te haya gustado"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:textSize="@dimen/subtitle_text_size"/>

        <EditText
            android:id="@+id/etxt_search_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textColor="@color/colorPrimary"
            android:hint="Ej: Puré de naranja"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textColorHint="@color/grayLight"
            android:drawableLeft="@drawable/calendario"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/linea_input"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que contenga"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:textSize="@dimen/subtitle_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Spinner
                style="@style/Widget.App.SpinnerSearch"
                android:id="@+id/spn_search"
                android:layout_marginBottom="4dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:prompt="@string/spinner_search_prompt"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linea_input"/>
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search_search"
            android:layout_margin="4dp"
            android:text="Buscar"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/subtitle_text_size"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:background="@drawable/button_border_white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Todas las recetas"
                android:textAllCaps="true"
                android:textSize="@dimen/subtitle_text_size"
                android:textColor="@color/textColorBlack"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                />

            <com.android.quieromas.view.EmptyRecyclerView
                android:id="@+id/search_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/fragment_recipe_item">
            </com.android.quieromas.view.EmptyRecyclerView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

