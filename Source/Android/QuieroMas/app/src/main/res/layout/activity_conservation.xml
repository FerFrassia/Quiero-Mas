<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.android.quieromas.activity.ConservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_conservation_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/close_orange"
            android:layout_margin="8dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conservation_title"
            android:textAllCaps="true"
            android:textColor="@color/orangePrimary"
            android:textSize="@dimen/bigtitle_text_size"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:textAlignment="center"
            android:layout_margin="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conservation_subtitle"
            android:textAllCaps="true"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/subtitle_text_size"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grayPrimary"
            android:textSize="@dimen/subsubtitle_text_size"
            android:text="@string/conservation_first_text"
            android:layout_below="@+id/tip_title"
            android:id="@+id/tip_text"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_margin="24dp"
            android:layout_gravity="end"
            android:background="@drawable/divisor_naranja"
            android:rotation="180" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/conservation_food_linear_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/conservation_duration_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                android:background="@color/grayLight"
                android:textAllCaps="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:id="@+id/conservation_tip_linear_layout">
        </LinearLayout>

    </LinearLayout>



</ScrollView>
