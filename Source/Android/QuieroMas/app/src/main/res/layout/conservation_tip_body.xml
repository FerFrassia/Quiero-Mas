<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_conservation_tip_body_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="al vapor"
        android:textAllCaps="true"
        android:textColor="@color/orangePrimary"
        android:textSize="@dimen/subtitle_text_size"
        android:textAppearance="@style/AppTheme.TextAppearance.Bold"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/txt_conservation_tip_body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grayPrimary"
        android:textSize="@dimen/subsubtitle_text_size"
        android:text="@string/conservation_first_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</LinearLayout>