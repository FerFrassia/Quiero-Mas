<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <TextView
        android:id="@+id/recipe_list_steps_step_n"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/orangePrimary"
        android:textSize="@dimen/subtitle_text_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:text=""
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/recipe_list_steps_step_info"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/subtitle_text_size"
        android:text=""
        android:layout_alignParentTop="true"
        android:lineSpacingMultiplier="1.25"
        android:layout_toEndOf="@+id/recipe_list_steps_step_n"
        android:layout_margin="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/recipe_list_steps_step_info"
        android:layout_marginEnd="4dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/recipe_list_steps_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/plus_icon"
            android:visibility="gone"
            />

    </LinearLayout>



</LinearLayout>