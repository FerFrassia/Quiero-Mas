<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recipe_list_steps_step_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orangePrimary"
        android:textSize="@dimen/subtitle_text_size"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:text="●"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/recipe_list_steps_step_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/subtitle_text_size"
        android:text="Hacer una mezcla con el puré de batata y la ricota."
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/recipe_list_steps_step_n"
        android:layout_margin="8dp" />


</RelativeLayout>