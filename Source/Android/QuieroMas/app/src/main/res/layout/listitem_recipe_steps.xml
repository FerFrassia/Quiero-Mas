<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recipe_list_steps_step_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orangePrimary"
        android:textSize="@dimen/subtitle_text_size"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:text=""
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/recipe_list_steps_step_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/subtitle_text_size"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/recipe_list_steps_step_n"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/recipe_list_steps_plus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/plus_icon2"
        android:layout_alignTop="@+id/recipe_list_steps_step_info"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true" />


</RelativeLayout>