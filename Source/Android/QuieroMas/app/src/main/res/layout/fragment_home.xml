<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.quieromas.fragment.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f2f6"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bebe_home_bck"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/small_text_size"
                    android:text="Bienvenid@s"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/bigtitle_text_size"
                    android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                    android:id="@+id/home_title_name"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#f1f2f6"
                />

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f1f2f6"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="0.5dp"
                android:layout_marginRight="0.5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:id="@+id/view_receta_home">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/receta">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:lines="2"
                    android:text="Plan de nutrici贸n y recetas"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/xsmall_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:id="@+id/view_estimulacion_home">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/abacus">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:lines="2"
                    android:text="Estimulaci贸n y educaci贸n"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/xsmall_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:id="@+id/view_abc_home">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/abc">

                </ImageView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:lines="2"
                    android:text="El abc de la nutrici贸n"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/xsmall_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:id="@+id/view_lactancia_home">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/lactancia">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:lines="2"
                    android:text="Lactancia"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/xsmall_text_size" />

            </LinearLayout>

        </GridLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_first_use_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="300dp"
            android:src="@drawable/img_perfil"
            app:civ_border_color="#A0FFFFFF"
            app:civ_border_overlay="true"
            app:civ_border_width="4dp" />

    </RelativeLayout>


</FrameLayout>
