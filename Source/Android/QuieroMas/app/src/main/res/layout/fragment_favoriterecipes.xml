<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/naranjas">


    <Button
        android:id="@+id/btn_fav_recipe"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:background="@drawable/fav_lleno"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </Button>

    <TextView
        android:id="@+id/txt_recipe_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para el almuerzo"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/subsubtitle_text_size"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_above="@+id/txt_recipe_title"
        android:layout_alignStart="@+id/txt_recipe_title" />


    <TextView
        android:id="@+id/txt_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="PurÃ© de narnaja"
        android:textAllCaps="true"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="@style/TextViewBold"
        android:textSize="@dimen/subsubtitle_text_size"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_height="24dp"
        android:layout_width="12dp"
        android:rotation="180"
        android:background="@drawable/back_button"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
    </ImageView>
</RelativeLayout>
