<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.quieromas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.QuieroMas"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity android:name=".activity.AuthActivity" />
        <activity
            android:name=".activity.SignupActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity android:name=".activity.AuthFbActivity" />
        <activity
            android:name=".activity.CheckIfBornedActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity
            android:name=".activity.FirstUseActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RecipeActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity
            android:name=".activity.TipActivity"
            android:theme="@style/NoActionBarActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.DevelopmentDetailActivity" />
        <activity android:name=".activity.BaseActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5c84f2c848fa12edce31011817a28e1d058959eb" />

        <activity
            android:name=".activity.VideoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarActivity" />
        <activity
            android:name=".activity.BasicRecipeActivity"
            android:theme="@style/NoActionBarActivity" />
    </application>

</manifest>